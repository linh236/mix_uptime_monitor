<h1>Uptime for <%= @domain.name %></h1>

<%= turbo_stream_from dom_id(@domain) %>
<table class="table table-striped table-light">
  <thead>
    <tr>
      <th>Domain</th>
      <th>Sent at</th>
      <th class="text-center">Response time (ms)</th>
      <th class="text-center">Status</th>
    </tr>
  </thead>
  <tbody id="pings">
    <tr>
      <td colspan="2" class="text-left">
        <div id="ping-button">
          <%= render partial: "pings/ping_button", locals: { domain: @domain }%>
        </div>
      </td>
      <td colspan="2" class="text-right">
        <div id="monitor">
          <%= render partial: "monitors/monitor", locals: { domain: @domain }%>
        </div>
      </td>
    </tr>
    <% if @domain.pings.present? %>
      <% @domain.pings.each do |ping| %>
        <%= render partial: "pings/ping", locals: { ping: ping, domain: @domain }%>
      <% end %>
    <% else %>
    <% end %>
  </tbody>
</table>